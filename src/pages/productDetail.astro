---
import Layout from '../layouts/Layout.astro';

const { title, image, content, cta } = Astro.props;
---

<Layout>
  <main class="max-w-4xl mx-auto p-6">
    <!-- Navigation Back -->
    <div class="mb-4">
      <a href="/" class="text-blue-500 hover:underline">‚Üê Back</a>
    </div>

    <!-- Title -->
    <h1 class="text-2xl font-bold mb-4">{title}</h1>

    <!-- Featured Image -->
    <img src={image} alt={title} class="w-full h-auto mb-4 rounded-lg" />

    <!-- Content -->
    <div class="text-gray-700 mb-6">
      {content}
    </div>

    <!-- CTA -->
    <div class="text-center">
      <a href={cta.url} class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">
        {cta.label}
      </a>
    </div>
  </main>
</Layout>

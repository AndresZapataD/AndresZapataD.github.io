---

<!-- Skills -->
<div class="my-10 sm:my-14">
  <h2 class="mb-5 font-medium text-gray-800 dark:text-neutral-200">
    Skills
  </h2>

  <!-- List -->
  <div class="space-y-3">
    {skillCategories.map((category) => (
      <dl class="flex flex-col sm:flex-row gap-1">
        <dt class="min-w-40">
          <span class="block text-sm text-gray-500 dark:text-neutral-500">
            {category.name}:
          </span>
        </dt>
        <dd>
          <ul>
            {category.skills.map((skill, index) => (
              <li class={`inline-flex items-center text-sm text-gray-800 dark:text-neutral-200 ${
                index !== category.skills.length - 1 ? "me-1 after:content-[',']" : ""
              }`}>
                {/* Icon akan ditambahkan nanti */}
                {skill.name}
              </li>
            ))}
          </ul>
        </dd>
      </dl>
    ))}
  </div>
</div>
